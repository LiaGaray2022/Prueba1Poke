<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prueba1Poke.Views.viewAnillos">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Vista de Pichu"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Crear Pichu" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold" Margin="0,0,0,20" />

            <Entry Text="{Binding Nombre}" Placeholder="Nombre" />
            <DatePicker Date="{Binding FechaNacimiento}" />

            <Button Command="{Binding CrearPichuCommand}" Text="Crear Pichu" BackgroundColor="#2196F3" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>